@{
    ViewData["Title"] = "Request Received";

    var name = TempData["CustomerName"] as string ?? "Friend";
    var service = TempData["ServiceName"] as string ?? "Service";
    var stylist = TempData["StylistName"] as string ?? "a stylist";
    var date = TempData["DateText"] as string ?? "(date)";
    var time = TempData["TimeText"] as string ?? "(time)";
}

<div class="mt-4">
    <h1>Thanks, @name!</h1>

    <p>
        Your request for <strong>@service</strong> with <strong>@stylist</strong>
        on <strong>@date</strong> at <strong>@time</strong> was received.
    </p>

    <p>This screen is your confirmation. No email is sent.</p>

    <a class="btn btn-primary mt-3" asp-controller="Booking" asp-action="Index">Make another booking</a>
</div>