<h2>Stylist Home</h2>

@{
    if (ViewData["Stylist"] == null)
    {
        <p><a asp-action="AddProfile">Add Profile</a></p>
    }
    else
    {
        <div id="calendar"></div>
        <script>
            $(document).ready(function()
            {
                ('#calendar').fullCalendar({
                    header: 
                    {
                        left: 'prev, next today',
                        center: 'title',
                        right: 'month,agendaWeek,agendaDay'
                    },
                    editable: true;
                })
            })
        </script>
    }

}
