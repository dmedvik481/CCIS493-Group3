@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<div class="auth-wrap">
    <div class="auth-card" style="max-width: 800px;">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="m-0">All Roles</h1>
            <a class="btn btn-primary btn-cta" asp-action="AddRole">Add Role</a>
        </div>

        @if (ViewBag.ErrMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrMessage</div>
        }
        @if (ViewBag.OkMessage != null)
        {
            <div class="alert alert-success">@ViewBag.OkMessage</div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info mb-0">No roles found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th class="text-end">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-end">
                                    <form asp-action="DeleteRole" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@role.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Delete role @role.Name ?');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
